---
import {PortableText} from "astro-portabletext";
import Link from "../Link.astro";
import Button from "../Button.astro";

const {node} = Astro.props;
---

<div
  class="mb-12 max-w-7xl mx-auto px-0 md:px-[var(--space-m)] lg:px-[var(--space-l)] xl:px-[var(--space-xl)]">
  <PortableText value={node.title} />
</div>
<div class="marquee">
  <div class="track">
    <div class="content">
      &nbsp;{node.texte}
    </div>
  </div>
</div>

<style>
  .marquee {
    position: relative;
    width: 100vw;
    max-width: 100%;
    height: 200px;
    overflow-x: hidden;
  }

  .track {
    position: absolute;
    white-space: nowrap;
    will-change: transform;
    animation: marquee 32s linear infinite;
  }

  .content {
    font-size: var(--space-l);
    font-weight: 400;
  }

  @keyframes marquee {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-50%);
    }
  }
</style>
